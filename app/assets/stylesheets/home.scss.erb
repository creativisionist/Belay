.header .navbar-brand {
  font-weight: 900;
}

.header .navbar {
  margin: 0;
  border: none;
}

#logo {
  height: 250%;
  width: 13%;
  margin-top: -17px;
}

.header {
  position: fixed;
  width: 100%;
  z-index: 10;
  background-color: white;
}

.title {
  margin-top: 100px;
  margin-right: 80px;
}

#login {
  width: 100%;
  min-height: 800px;
  padding: 50px 0;
  color: black;
  text-shadow: 1px 1px #A8C1DE;
  position: absolute;
  z-index: 1;
}

.bg {
  width: 100%;
  min-height: 800px;
  background-image: url("<%= asset_path('rockclimbingkid.jpg') %>");
  background-position: 3% 60%;
  background-repeat: no-repeat;
  background-attachment: fixed;
  opacity: 0.7;
}

.cover {
  color: black;

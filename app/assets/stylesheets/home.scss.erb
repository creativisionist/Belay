.header .navbar-brand {
  font-weight: 900;
}

.header .navbar {
  margin: 0;
  border: none;
}

.header {
  position: fixed;
  width: 100%;
  z-index: 10;
  background-color: white;
}

.title {
  margin-top: 100px;
  margin-right: 80px;
}

.page#login {
  width: 100%;
  min-height: 800px;
  padding: 50px 0;
  background-image: url("<%= asset_path('rockclimbingkid.jpg') %>");
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.cover {
  color: white;
  text-align: right;
  margin-top: -150px;
  margin-right: 300px;
}

.page-section#about {
  width: 100%;
  min-height: 800px;
  padding: 50px 0;
}

@media (min-width: 768px) {
  .header .navbar-brand {
    padding-left: 45px;
  }
  .navbar-nav {
    float: right;
  }
}


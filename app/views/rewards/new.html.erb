<%= form_tag "/rewards", method: :post do %>

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div>
    <%= label_tag :image_url %>
    <%= text_field_tag :image_url %>
  </div>

  <div>
    <%= label_tag :amount_cost %>
    <%= text_field_tag :amount_cost %>
  </div>

  <div>
    <%= submit_tag %>
  </div>

<% end %>
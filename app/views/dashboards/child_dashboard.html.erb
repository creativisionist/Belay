<div ng-app="app">

<div ng-controller="childrenCtrl" ng-init="setup(<%= current_user.id %>)">

  <div class="header-child">
    <div class="container">
      <nav class="navbar" role="navigation">
        <div class="navbar-header">
          <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if user_is_child? %>
          <a href="<%= child_dashboard_path %>" class="navbar-brand scroll-top"><img id="childlogo" src="assets/logo_v1.png"></a>
          <% else %>
          <a href="<%= parent_dashboard_path %>" class="navbar-brand scroll-top">Belay</a>
          <% end %>
        </div>
        <div id="main-nav" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="#" class="scroll-link" data-id="todo">To Do</a></li>
            <li><a href="#" class="scroll-link" data-id="bank">Bank Account</a></li>
            <li><a href="#" class="scroll-link" data-id="investments">Investments</a></li>
            <li><a href="#" class="scroll-link" data-id="store">Store</a></li>
            <% if user_signed_in? %>
            <li><a href="<%= edit_user_registration_path %>">Edit Account</a></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>

  <div class="title-child">
    <div class="container">
      <h1>Welcome to your dashboard, {{ first_name }}!</h1>
      <div class="clock">
        <h2><span>Current local time in</span><br />Chicago, United States</h2> <iframe src="http://www.zeitverschiebung.net/clock-widget-iframe?language=en&timezone=America%2FChicago" width="100%" height="130" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <div id="todo" class="page-section">
    <div class="container">
    <h2>Tasks To Complete:</h2>
      <div class="emoji wow rollIn">
        <div class="text">
        <h3>Total #: {{ incomplete_tasks.length }}</h3>
        <h2>¯\_(ツ)_/¯</h2>
        <h5>Do something today that <br />your future self will thank you for.</h5>
        </div>
      </div>
      <table class="table table-hover">
        <tr>
          <th ng-click="toggleOrder('to_do')">Task</th>
          <th ng-click="toggleOrder('amount_earned')">Amount</th>
        </tr>
        <tr ng-repeat="task in incomplete_tasks | orderBy:orderAttribute:descending">
          <td>{{ task.to_do }}</td>
          <td>{{ task.amount_earned }}</td>
          <td "col-sm-1"><button ng-click="updateTaskStatus(task.id)">Complete
          </button></td>
        </tr>
      </table>
      <a href="#" class="scroll-top back-to-top">^</a>
    </div>
  </div>

  <section class="parallax-child-1">
    <div class="container">
      <h1>Patience is not the ability to wait, but the ability to keep a good attitude while waiting.</h1>
    </div>
  </section>

  <div id="bank" class="page-section">
    <div class="container">
      <h2>Bank Account:</h2>
        <ol>
          <div>
            <h3> Current Balance To Spend:</h3> 
            {{ total_balance }}  Points
          </div>
        </ol>

        <h5>
          <ol>
            <h3> Total Investments:</h3>
              {{ total_investments }}

            <h3> Total Investments + Balance Today: </h3>
              {{ investments_and_balance }}
            
            <h3> Current Interest Rate: </h3>
              {{ interest_rate }} per day
          </ol>
        </h5>
        <a href="#" class="scroll-top back-to-top">^</a>
      </div>
    </div>


    <div id="investments" class="page-section">
      <div class="container">
        <div>
          <h2> Current Investments:</h2>
          <h3>Total #: {{ current_investments.length }}</h3>
        </div>
        <table class="table table-striped">
        <tr>
          <th ng-click="toggleOrder('investment_date')">Created</th>  
          <th ng-click="toggleOrder('duration')">Duration Invested</th>
          <th ng-click="toggleOrder('days_remaining')">Days Remaining</th>
          <th ng-click="toggleOrder('days_passed')">Days Passed</th>
          <th ng-click="toggleOrder('interest_rate')">Interest Rate</th>
          <th ng-click="toggleOrder('money_invested')">Amount Invested</th>
          <th ng-click="toggleOrder('investment_balance_to_date')">How Much You Have Today</th>
          <th>Place in Spending Balance</th>
        </tr>
        <tr ng-repeat="investment in current_investments | orderBy:orderAttribute:descending">
          <td>{{ investment.investment_date }}</td>
          <td>{{ investment.duration }}</td>
          <td>{{ investment.days_remaining }}</td>
          <td>{{ investment.days_passed }} </td>
          <td>{{ investment.interest_rate }}</td>
          <td>{{ investment.money_invested }}</td>
          <td>{{ investment.investment_balance_to_date }}</td>
          <td ng-if="investment.withdrawl_status === 'complete'">
          <button ng-click="payOutInvestment(investment.id)">Cash Out
          </button></td>
        </tr>
      </table>

      <h2>I'd Like To Make An Investment</h2>
        Amount To Invest: <input ng-model="money_invested" convert-to-decimal>
        Days To Save: <select ng-model="duration" convert-to-integer>
          <option value="30">30</option>
          <option value="90">90</option>
          <option value="180">180</option>
          <option value="360">360</option>
        </select>
        <button ng-click="addNewInvestment(money_invested, duration)">Save Away!</button>
        <div><a href="#" class="scroll-top back-to-top">^</a></div>
      </div>
    </div>

  <section class="parallax-child-3">
    <div class="container">
      <h1>Great job, {{ first_name }}!</h1>
      <h2>Now on to the fun stuff...</h2>
    </div>
  </section>

    <div id="store" class="page-section">
      <div class="container">
      <h2>Ready to Shop?</h2>
          <table class="table table-hover">
            <tr>
              <th>Image</th>
              <th ng-click="toggleOrder('description')">Description</th>
              <th ng-click="toggleOrder('amount_cost')">Price</th>
              <th>Spend or save more for tomorrow?</th>
            </tr>
            <tr ng-repeat="reward in unbought_rewards | orderBy:orderAttribute:descending">
              <td><img ng-src="{{ reward.image_url }}" width="100"></td>
              <td>{{ reward.description }}</td>
              <td>{{ reward.amount_cost }}</td>
              <td><button ng-click="buyReward(reward.id)">Purchase!</button>
              </td>
            </tr>
          </table>
          <div><a href="#" class="scroll-top back-to-top">^</a></div>
        </div>
      </div>
    </div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
<script src="js/bootstrap.min.js" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
  // navigation click actions 
  $('.scroll-link').on('click', function(event){
    event.preventDefault();
    var sectionID = $(this).attr("data-id");
    scrollToID('#' + sectionID, 750);
  });
  // scroll to top action
  $('.scroll-top').on('click', function(event) {
    event.preventDefault();
    $('html, body').animate({scrollTop:0}, 'slow');     
  });
  // mobile nav toggle
  $('#nav-toggle').on('click', function (event) {
    event.preventDefault();
    $('#main-nav').toggleClass("open");
  });
});
// scroll function
function scrollToID(id, speed){
  var offSet = 50;
  var targetOffset = $(id).offset().top - offSet;
  var mainNav = $('#main-nav');
  $('html,body').animate({scrollTop:targetOffset}, speed);
  if (mainNav.hasClass("open")) {
    mainNav.css("height", "1px").removeClass("in").addClass("collapse");
    mainNav.removeClass("open");
  }
}
if (typeof console === "undefined") {
    console = {
        log: function() { }
    };
}
</script>

<script>
 new WOW().init();
</script>